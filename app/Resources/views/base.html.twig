                    <div id="logo"><a href="{{ path('homepage') }}"><img src="{{ asset('img/logo.png') }}"></a></div>
                </a>
            </div>
            <div id="navbar-collapse-grid" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li><a href="#">Sikkim Tour</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>
<section id="frame">
    {% block frame %}
        {{ render(controller('AppBundle:Default:banner')) }}
    {% endblock %}
    <section id="reservation-form">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    {{ render(controller('AppBundle:Default:Destination')) }}
                </div>
            </div>
        </div>
    </section>
</section>
<section id="room-carousel">
    <div class="container">
        <div class="row">
            {% block deals %}
            {% endblock %}
            {% block carousel %}
            {% endblock %}
        </div>
    </div>
</section>
<section id="main-content">
    <div class="container">
        <div class="row">
            {% block body %}{% endblock %}
        </div>
    </div>
</section>
<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h4>Corporate Office:</h4>
                <p>Decorum LLP,<br>
