<form class="form-inline reservation-horizontal clearfix" role="form" method="post" action="{{ path('filter_hotels') }}"
      name="reservationform" id="reservationform">
    <!-- Error message -->
    <div id="message"></div>
    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <label for="email" accesskey="E">Destination</label>
                <select required class="form-control" name="destination" id="destination">
                    <option value="" selected="selected" disabled="disabled"> Select Destination</option>
                    {% for val in destination %}
                        <option value="{{ val.destinatonName }}">{{ val.destinatonName }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label for="checkin">Check-in</label>
                {#<div class="popover-icon" data-container="body" data-toggle="popover"#}
                {#data-trigger="hover" data-placement="right"#}
                {#data-content="Check-In is from 11:00"><i class="fa fa-info-circle fa-lg"> </i>#}
                {#</div>#}
                <i class="fa fa-calendar infield"></i>
                <input name="checkin" type="text" id="checkin" value="" class="form-control"
                       placeholder="Check-in"/>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label for="checkout">Check-out</label>
                {#<div class="popover-icon" data-container="body" data-toggle="popover"#}
                {#data-trigger="hover" data-placement="right"#}
                {#data-content="Check-out is from 12:00"><i class="fa fa-info-circle fa-lg"> </i>#}
                {#</div>#}
                <i class="fa fa-calendar infield"></i>
                <input name="checkout" type="text" id="checkout" value="" class="form-control"
                       placeholder="Check-out"/>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label for="room">Room Category</label>
                {#<div class="popover-icon" data-container="body" data-toggle="popover"#}
                {#data-trigger="hover" data-placement="right"#}
                {#data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus."><i#}
                {#class="fa fa-info-circle fa-lg"> </i></div>#}
                <select required class="form-control" name="room" id="room">
                    <option selected="selected" disabled="disabled" value="">Select Room</option>
                    <option value="0">2 Star</option>
                    <option value="1">3 Star</option>
                    <option value="2">4 Star</option>
                    <option value="3">5 Star</option>
                </select>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="form-group">
                <label for="room">Price Range</label>
                {#<div class="popover-icon" data-container="body" data-toggle="popover"#}
                {#data-trigger="hover" data-placement="right"#}
                {#data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus."><i#}
                {#class="fa fa-info-circle fa-lg"> </i></div>#}
                <select class="form-control" name="price" id="price">
                    <option selected="selected" disabled="disabled">Select Price</option>
                </select>
            </div>
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary btn-block">Find Hotels</button>
        </div>
    </div>
</form>