{% block body %}
    <div id="add">
    <div class="adverts img-wrap">
       <img src="{{ asset('img/adverts/1.jpg') }}" alt="" class="img-responsive image">
        <div class="middle">
            <a href="{{ path('package_form') }}">
                <div class="text">Explore Now</div>
            </a>
        </div>
    </div>
    <div class="adverts img-wrap">
        <img src="{{ asset('img/adverts/2.jpg') }}" alt="" class="img-responsive image">
        <div class="middle">
            <a href="{{ path('package_form') }}"><div class="text">Explore Now</div></a>
        </div>
    </div>
    </div>
    <style>
        .img-wrap {
            position: relative;
            width:100%;
        }

        .image {
            opacity: 1;
            display: block;
            width: 100%;
            height: auto;
            transition: .5s ease;
            backface-visibility: hidden;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
        }

        .img-wrap:hover .image {
            opacity: 0.5;
        }

        .img-wrap:hover .middle {
            opacity: 1;
        }

        .text {
            background-color: #FFF;
            color: #111;
            font-size: 14px;
            padding:5px 12px;
            -webkit-border-radius: 15px;
            -moz-border-radius: 15px;
            border-radius:5px;
        }
    </style>
{% endblock %}
